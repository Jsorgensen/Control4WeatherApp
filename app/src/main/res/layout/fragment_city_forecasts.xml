<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="jsorgensen.com.control4weatherapp.Views.CityForecastsFragment">

     <jsorgensen.com.control4weatherapp.Views.FilterSpinner
         android:id="@+id/citiesFilterSpinner"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"/>

      <android.support.v7.widget.RecyclerView
          android:id="@+id/citiesRecyclerView"
          android:layout_width="0dp"
          android:layout_height="0dp"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintTop_toBottomOf="@id/citiesFilterSpinner"
          app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>
