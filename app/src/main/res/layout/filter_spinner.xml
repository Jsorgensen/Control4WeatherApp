<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/spinner_background">

    <EditText
        android:id="@+id/filterSpinnerEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_background"
        android:fontFamily="@font/autour_one"
        android:hint="@string/enter_text"
        android:minWidth="200dp"
        android:padding="6dp"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/filterSpinnerButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/filterSpinnerButton"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="@string/down_arrow"
        android:textSize="20sp"
        android:includeFontPadding="false"
        android:minWidth="50dp"
        android:minHeight="0dp"
        android:fontFamily="@font/autour_one"
        android:background="@drawable/button_normal_transparent"
        app:layout_constraintStart_toEndOf="@id/filterSpinnerEditText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>